<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Select Quiz</title>
</head>
<body>
  <h2>Select a Quiz</h2>
  <form action="/start" method="post">
    <label for="quiz">Choose a quiz:</label>
    <select name="quiz" id="quiz" required>
      <% quizzes.forEach(quiz => { %>
        <option value="<%= quiz %>"><%= quiz %></option>
      <% }); %>
    </select>
    
    <!-- Filter Checkboxes -->
    <div>
      <label>
        <input type="checkbox" name="withImages" checked>
        Questions with Images
      </label>
    </div>
    <div>
      <label>
        <input type="checkbox" name="textOnly" checked>
        Text Questions
      </label>
    </div>
    
    <button type="submit">Start Quiz</button>
  </form>
</body>
</html>
